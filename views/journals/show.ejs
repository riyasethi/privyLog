<% layout('layouts/boilerplate')%>

<div class="row justify-content-center">
    <div class="col-6">
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title"><%= journal.title%></h5>
                <p class="card-text"><%= journal.content%></p>
            </div>
            <div class="card-body">
                <a class="card-link btn btn-success" href="/journals/<%=journal._id%>/edit">Edit</a>
                <form class="d-inline" action="/journals/<%=journal._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
                <a class="card-link btn btn-info" href="/journals">Back to All Journals</a>
            </div>
        </div>
    </div>
</div>
